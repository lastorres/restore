<h2>My Cart</h2>

<table class="table">
	<thead>
		<tr>
			<td>Name</td>
			<td>Price</td>
			<td>Qty</td>
			<td>Subtotal</td>
      <td>Remove from List</td>
		</tr>
	</thead>
  <% @line_items.each do |line_item| %>
  	<tr>
    <td><%= line_item.product.name %></td>
    <td><%= number_to_currency line_item.product.price %></td>
    <td><%= form_tag edit_cart_path(id: line_item.id), method: :put do %>
          <%= number_field_tag :quantity, nil, value: line_item.quantity %>
          <%= submit_tag "Change Qty", class: "btn btn-primary" %>
        <% end %></td>
    <td><%= number_to_currency line_item.line_item_total %></td>
    <td><%= link_to 'Remove', remove_from_cart_path(id: line_item.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<div>
  <%= link_to "Proceed to Checkout?", checkout_path, class: "btn btn-success" %>
</div>